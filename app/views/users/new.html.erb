<%= provide(:title, 'Sign up') %>
<h1>註冊</h1>

<div class="row">
  <div class="span4 offset4">
  	<%= form_for(@user) do |f| %>
  	  <%= render 'shared/error_messages', object: f.object %>
      <%= render 'fields', f: f %>
  	  <%= f.submit "創建新帳號", class: "btn btn-large btn-primary" %>
  	<% end %>
  </div>
</div>
