<%= provide(:title, 'Edit user') %>
<h1>更改個人資料</h1>

<div class="row">
  <div class="span4 offset4">
  	<%= form_for(@user) do |f| %>
  	  <%= render 'shared/error_messages', object: f.object %>
      <%= render 'fields', f: f %>
  	  <%= f.submit "儲存更新", class: "btn btn-large btn-primary" %>
  	<% end %>

  	<%= gravatar_for @user %>
  	<a href="http://gravatar.com/emails" target="_blank">修改</a>
  </div>
</div>