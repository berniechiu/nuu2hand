<%= provide(:title, 'Edit book') %>
<h1>Update your book</h1>

<div class="row">
  <div class="span6 offset3">
  	<%= form_for(@book) do |f| %>
  	  <%= render 'shared/error_messages', object: f.object %>
      <%= render 'book_form', f: f %><br />
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
  	<% end %>
  </div>
</div>