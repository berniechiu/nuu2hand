<%= provide(:title, "Book") %>

<% if signed_in? %>
  <div class="row">
  	<aside class="span4">
  		<section>
  			<%= render 'shared/user_info' %>
  		</section>
  		<section>
  		  <%= render 'books/book_actions' %>
  		</section>
  	</aside>
    <div class="span8 book-page">
      <section>
    	  <%= render 'book_page' %>
      </section>
      <section>
        <%= render 'shared/comment_form' %>
      </section>
      <section>
        <% if @book.comments.any? %>
        <ol class="comments">
          <%= render @comments %>
        </ol>
        <%= will_paginate @comments %>
        <% end %>
      </section>
    </div>
  </div>
<% else %>
	<div class="center hero-unit">
		<h1>Welcome to the NUU2HAND</h1>

		<h2>
		  Home page for the open trading community.
		</h2>

		<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-success" %>
	</div>
<% end %>