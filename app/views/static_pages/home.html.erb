<%= provide(:title, 'Home') %>
<% if signed_in? %>
  <div class="row">
  	<aside class="span4">
  		<section>
  			<%= render 'shared/user_info' %>
  		</section>
  		<section>
  		  <%= render 'books/book_actions' %>
  		</section>
  	</aside>
    <div class="span8">
      <%= render 'books/search_form' %>
      <% if !@books.empty? %>
        <ol class="books">
          <%= render @books %>
        </ol>
        <%= will_paginate @books %>
      <% else %>
        <hr />
        <h3>無相關書籍</h2>
      <% end %>
    </div>
  </div>
<% else %>
	<div class="center hero-unit">
		<h1>歡迎來到 NUU2HAND</h1>

		<h2>
		  登入、註冊或了解更多
		</h2>

		<%= link_to "馬上註冊!", signup_path, class: "btn btn-large btn-success" %>
	</div>
<% end %>
