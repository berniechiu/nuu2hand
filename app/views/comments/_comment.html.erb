<li>
  <span class="gravatar">
  	<a href="<%= user_path(comment.user) %>"><%= gravatar_for comment.user, size: 30 %>
  	</a>
  </span>
  <span class="content"><%= comment.content %></span>
  <span class="timestamp">
  	<%= link_to comment.user.school_id.upcase, comment.user %> 張貼在 
    <%= time_ago_in_words(comment.created_at) %> 之前.
  </span>
  <% if current_user?(comment.user) %>
    <%= link_to "刪除", [@book, comment], method: :delete, remote: true %>
  <% end %>
</li>